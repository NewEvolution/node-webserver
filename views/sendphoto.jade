extends ./template.jade
block content
  div.row
    div.col-sm-1.col-md-2.col-lg-3
    div.col-xs-12.col-sm-10.col-md-8.col-lg-6
      h1.center-title Send us photos of you partying with cal.js

      form(enctype="multipart/form-data", method="POST")
        .form-group
          label#uploaded-file.btn.btn-default.btn-block Choose an Image
            input(type="file", name="image", accept="image/*", onchange="$('#uploaded-file').text($(this).val().substring(`C:/fakepath/`.length))").hidden
        .form-group
          input(type="submit", value="Share your image").btn.btn-default.btn-block
    div.col-sm-1.col-md-2.col-lg-3
